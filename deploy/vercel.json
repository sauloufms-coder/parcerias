{
  "version": 2,
  "routes": [
    { "src": "^/api/login$", "dest": "/api/login.js" },
    { "src": "^/api/logout$", "dest": "/api/logout.js" },
    { "src": "^/login$", "dest": "/login.html" },

    { "src": "^/$", "has": [{ "type": "cookie", "key": "sess", "value": "ok" }], "dest": "/app/index.html" },
    { "src": "^/app$", "has": [{ "type": "cookie", "key": "sess", "value": "ok" }], "dest": "/app/index.html" },
    { "src": "^/app/(.*)$", "has": [{ "type": "cookie", "key": "sess", "value": "ok" }], "dest": "/app/$1" },

    { "src": "^(?!/(api|login|icons|favicon\\.png|manifest\\.json)).*$",
      "missing": [{ "type": "cookie", "key": "sess", "value": "ok" }],
      "dest": "/login.html"
    }
  ]
}
